.flex-warp{
  overflow:hidden;
  position: relative
}

.bottom-line::after{
  display: block;
  content:"";
  width: 100%;
  height:1px;
  background-color:#ccc;
  position: absolute;
  bottom:0px;
}

.scroll-bar-item{
  display:inline-block;
  padding:0 5px;
  text-align: center;
  box-sizing: border-box;
}

.action{
  border-bottom: 1px solid green;
}
.bar-box{
  position: absolute;
  top:0;
  z-index: 100;
  white-space: nowrap
}


